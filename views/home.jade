extends layout

.script
    - notie.alert({ text: 'Article is deleted successfully!' , type:1})
block content
    .container-fluid
        table.table.table-hover
            tbody
                for article in articles
                    tr.normal-row
                        if !article.title
                            td
                                a.no-underline(href=article.story.story_url, target="_blank")
                                    span.custom-content #{article.story.story_title} - &nbsp;
                                        span.author-color #{article.author.name} -
                        else
                            td
                                a.no-underline(href=article.title, target="_blank")
                                    span.custom-content #{article.title}
                                        span.author-color #{article.author.name} -

                                //a(href=article.title, target="_blank") #{article.title}
                        td
                            span.custom-content #{article.date_created_friendly}
                        td
                            form(action='/#{article._id}', method='post')
                                button.fa.fa-trash(type='submit')
